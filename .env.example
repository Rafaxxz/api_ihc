# Configuración del servidor
PORT=3000
NODE_ENV=development

# Base de datos PostgreSQL (Render)
# Cuando crees la base de datos en Render, te dará una URL como esta:
DATABASE_URL=postgres://usuario:contraseña@host:5432/nombre_db

# JWT Secret (genera uno seguro para producción)
JWT_SECRET=tu_super_secreto_aqui_cambialo_en_produccion
JWT_EXPIRES_IN=7d

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:5500

# Cloudinary (opcional - para subir imágenes)
# CLOUDINARY_CLOUD_NAME=tu_cloud_name
# CLOUDINARY_API_KEY=tu_api_key
# CLOUDINARY_API_SECRET=tu_api_secret
